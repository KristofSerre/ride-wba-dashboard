{
    "routes": [
        {
            "path": "/admin",
            "controller": "ride\\web\\dashboard\\controller\\DashboardController",
            "action": "indexAction",
            "id": "admin"
        },
        {
            "path": "/admin/dashboard/add/%region%/%widget%",
            "controller": "ride\\web\\dashboard\\controller\\DashboardController",
            "action": "addAction",
            "id": "admin.dashboard.add"
            /*"methods": "POST"*/
        },

